<h1>Editing Book</h1>

<!-- routesで定義したpatchを適応させている -->
<%= form_with model: @book, url: update_book_path(@book.id), method: :patch do |f| %>

  <% if @book.errors.any? %>

    <div id="error_explanation">
      <!-- エラーが起きたとき以下の文章を表示する -->
      <h2><%= @book.errors.count %>errors prohibited this from being saved:</h2>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


  <%= form_with model: @book do |f| %>

    <% if @book.errors.any? %>
    <!-- エラーが起きたときエラー用のclassに変換する -->
        <div class ="field">
          <div class="field_with_errors">
            <h4>Title</h4>
          </div>
          <div class="field_with_errors">
            <%= f.text_field :title %>
          </div>
        </div>
        <div class = "field">
          <div class="field_with_errors">
            <h4>Body</h4>
          </div>
          <div class="field_with_errors">
            <%= f.text_area :body %>
          </div>
        </div>

        <% else %>
        <!-- エラーが起きなければそのまま -->
        <div class ="field">
            <h4>Title</h4>
            <%= f.text_field :title %>
        </div>
        <div class = "field">
            <h4>Body</h4>
            <%= f.text_area :body %>
        </div>
      <% end %>
      <!-- 編集ボタン -->
    <%= f.submit 'Update Book' %>
  <% end %>
<% end %>

 <%= link_to "Show", "/books/#{@book.id}" %> |
<%= link_to "Back", "/books" %>
